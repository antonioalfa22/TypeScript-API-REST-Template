{
    "name": "api-rest",
    "version": "1.0.0",
    "description": "API-Rest construida con NodeJS y TypeScript",
    "main": "index.js",
    "scripts": {
        "test": "mocha -r ts-node/register ./src/test/**/*.spec.ts",
        "build": "tsc",
        "dev": "ts-node ./src/server.ts",
        "start-dev": "nodemon --ext ts --exec ts-node --delay 3 ./src/server.ts",
        "start-prod": "nodemon ./dist/server.js",
        "prod": "npm run build && npm run start-prod"
    },
    "author": "Antonio Payá González",
    "license": "ISC",
    "dependencies": {
        "@types/express": "^4.16.0",
        "body-parser": "^1.18.3",
        "express": "^4.16.4",
        "nodemon": "^1.18.9",
        "typescript": "^3.3.3333"
    },
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "mocha": "^6.2.1",
        "ts-node": "^8.4.1"
    }
}